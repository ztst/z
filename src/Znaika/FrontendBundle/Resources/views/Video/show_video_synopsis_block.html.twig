{% if video.getSynopsis %}
  {% if is_moderator() %}
    <a class="semi-active-button edit-button" href="{{ path('add_synopsis_form', {'videoName': video.getUrlName}) }}">
      <span class="semi-active-button-label">Редактировать конспект</span>
    </a>
    <div class="clear"></div>
  {% endif %}
  {{ show_synopsis(video)|raw }}
{% elseif is_moderator() %}
  <a id="addSynopsis" href="{{ path('add_synopsis_form', {'videoName': video.getUrlName}) }}" class="active-button add-button">
    <span class="active-button-label">Добавить конспект</span>
  </a>
{% endif %}