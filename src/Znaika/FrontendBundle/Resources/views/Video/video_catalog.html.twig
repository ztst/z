{% if videos %}
  {% for video in videos %}
    <div class="video-description-container">
      <div class="col-xs-12 col-sm-8 col-md-6 col-lg-5 col-left">
        <a href="{{ path('show_video', {
                    'subjectName': video.getSubject.getUrlName,
                    'class': video.getGrade,
                    'videoName': video.getUrlName
                    }) }}"
           title="{{ video.getName|raw }}">
          <img width="100%" src="{{ large_video_thumbnail(video) }}" alt="{{ video.getName|raw }}" />
        </a>
      </div>
      <div class="col-xs-12 col-sm-4 col-md-6 col-lg-7 col-right">
        <h2>{{ video.getName|raw }}</h2>
        <h4>{{ video.getGrade }} класс</h4>
        <h4>{{ video.getSubject.getName }}</h4>
        <h4>{{ video.getChapter.getName|raw }}</h4>
      </div>
      <div class="clear"></div>
    </div>
  {% endfor %}
{% else %}
  <h1>Пока что пусто</h1>
{% endif %}