<ul class="media-list">
  {% for comment in comments %}
    {% if loop.first %}
      {% set firstOrLast = "first" %}
    {% elseif loop.last %}
      {% set firstOrLast = "last" %}
    {% else %}
      {% set firstOrLast = "" %}
    {% endif %}
    {% include "ZnaikaFrontendBundle:Video:simple_comment.html.twig" with {
        "comment": comment,
        "firstOrLast": firstOrLast
    }
    %}
  {% endfor %}
</ul>