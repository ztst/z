<ul class="media-list">
  {% for comment in comments %}
    {% if loop.first %}
      {% set firstOrLast = "first" %}
    {% elseif loop.last %}
      {% set firstOrLast = "last" %}
    {% else %}
      {% set firstOrLast = "" %}
    {% endif %}

    {% set liked = false %}
    {% for likedComment in userVideoLikedComments %}
      {% if comment == likedComment %}
        {% set liked = true %}
      {% endif %}
    {% endfor %}

    {% include "ZnaikaFrontendBundle:Video:simple_comment.html.twig" with {
        "comment": comment,
        "firstOrLast": firstOrLast,
        "liked": liked,
        "userVideoLikedComments": userVideoLikedComments
    }
    %}
  {% endfor %}
</ul>