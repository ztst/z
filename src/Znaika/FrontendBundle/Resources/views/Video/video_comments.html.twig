<ul class="media-list">
  {% for comment in comments %}
    {% if loop.first %}
      {% set firstOrLast = "first" %}
    {% elseif loop.last %}
      {% set firstOrLast = "last" %}
    {% else %}
      {% set firstOrLast = "" %}
    {% endif %}

    {% set liked = false %}
    {% if comment in userVideoLikedComments %}
      {% set liked = true %}
    {% endif %}

    {% include "ZnaikaFrontendBundle:Video:simple_comment.html.twig" with {
        "comment": comment,
        "firstOrLast": firstOrLast,
        "liked": liked
    }
    %}
  {% endfor %}
</ul>