<ul class="media-list">
  {% for comment in comments %}
    <li class="media comment-container{% if loop.first %} first{% elseif loop.last %} last{% endif %}">
      <a class="pull-left"
         href="{% if is_moderator() %}{{ path("not_verified_pupils", {"userId": comment.user.userId}) }}{% else %}javascript:void(0);{% endif %}">
        <img class="media-object"
             width="60"
             height="60"
             src="{{ user_photo_small_url(comment.user) }}"
             alt="{{ comment.user }}"/>
      </a>
      <div class="media-body">
        <a class=""
           href="{% if is_moderator() %}{{ path("not_verified_pupils", {"userId": comment.user.userId}) }}{% else %}javascript:void(0);{% endif %}">
          {{ comment_title(comment)|raw }}
        </a>
        <span class="comment-body">{{ comment_text(comment) }}</span>
        <h6 class="media-heading comment-date">{{ comment_date(comment.getCreatedTime) }}</h6>
        {% set commentAnswerBlock = comment_answer_block(comment) %}
        {% if commentAnswerBlock %}
          <div class="media comment-answer">{{ commentAnswerBlock|raw }}</div>
        {% endif %}
      </div>
    </li>
  {% endfor %}
</ul>