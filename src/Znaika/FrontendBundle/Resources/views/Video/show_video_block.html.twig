<div class="video-container">
  {% if is_moderator() %}
    <a class="semi-active-button edit-button" href="{{ path("edit_video_form", {"videoName": video.urlName}) }}">
      <span class="edit-button-icon"></span>
      <span class="edit-button-label">Редактировать видеоурок</span>
    </a>
    <div class="clear"></div>
  {% endif %}
    <div class="video-player-container">
    <iframe src="//player.vimeo.com/video/{{ video.getUrl }}" width="100%" height="375" frameborder="0"
            webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
  </div>
  <div class="clear"></div>
  <div class="col-md-12 col-center">
    <div class="video-info">
      <h5 class="video-author">{{ video.getAuthor }}</h5>
      <h5 class="video-views-amount">{{ 'count_views'|transchoice(video.getViews) }}</h5>

      <div class="clear"></div>
      {% set month = video.getCreatedTime|date('F') %}
      {% set year = video.getCreatedTime|date('Y') %}
      <div class="video-date">{{ '%s %s'|format(month|trans, year) }}</div>
    </div>
    {% include "ZnaikaFrontendBundle:Video:show_video_comments_block.html.twig" with {'video': video, 'comments': comments} %}
  </div>
</div>