{% if videos %}
  {% for video in videos %}
    <div class="list-item">
      <div class="video-preview">
        <a href="{{ path('show_video', {
        'subjectName': video.getSubject.getUrlName,
        'class': video.getGrade,
        'videoName': video.getUrlName
        }) }}"
           title="{{ video.getName|raw }}">
          <img src="{{ large_video_thumbnail(video) }}" alt="{{ video.getName|raw }}"/>
          <span class="video-preview-over">&nbsp;</span>
        </a>
        <div class="video-duration">{{ video.duration|date("i:s") }}</div>
      </div>
      <div class="video-description">
        <a
          href="{{ path('show_video', {
          'subjectName': video.getSubject.getUrlName,
          'class': video.getGrade,
          'videoName': video.getUrlName
          }) }}"
          title="{{ video.getName|raw }}">
          <h5 class="video-title">{{ video.getName|raw }}</h5>
        </a>
        <div class="video-info-line">
          <span>{{ video.getSubject.getName }}, {{ video.getGrade }} класс</span>
        </div>
      </div>
    </div>
  {% endfor %}
  <div class="clear"></div>
{% else %}
  <h5>Не найдено</h5>
{% endif %}