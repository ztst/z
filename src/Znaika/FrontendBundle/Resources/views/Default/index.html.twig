{% extends 'ZnaikaFrontendBundle::layout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}

  {% stylesheets '@ZnaikaFrontendBundle/Resources/public/css/index.css' %}
    <link rel="stylesheet" type="text/css" media="all" href="{{ asset_url }}"/>
  {% endstylesheets %}
{% endblock %}

{% block content %}
  <div class="index-content">
    <div class="index-top-videos-block">
      <div class="index-page-top-video col-lg-8 col-md-8 col-sm-12 col-xs-12">
        <h2>
          Смотрите видеоуроки от лучших учителей России на федеральном
          образовательном портале Знайка.Ру
        </h2>
        <div class="top-video-preview">
          <img src="{{ asset('/images/video-center-dummy.jpg') }}" alt="Видео по центру"/>
        </div>
        <span class="learn-more">
          <a href="javascript:void(0)">Узнать подробнее о проекте Знайка.Ру</a>
        </span>
      </div>
      <div class="col_center col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <div class="index-page-videos-list col_center col-lg-6 col-md-6 col-sm-6 col-xs-12">
          {{ newest_video()|raw }}
          <span class="get-more-videos">
            <a href="javascript:void(0)">Все новинки</a>
          </span>
        </div>
        <div class="index-page-videos-list col_right col-lg-6 col-lg-offset-0 col-md-6 col-md-offset-0 col-sm-6 col-sm-offset-2 col-xs-12">
          {{ popular_video()|raw }}
          <span class="get-more-videos">
            <a href="javascript:void(0)">Все популярные</a>
          </span>
        </div>
      </div>
    </div>
    <div class="clear"></div>
    <div class="social-buttons-block">
      <div class="social-buttons-container">
        <div class="social-buttons-text">
          <h5>Быстрый вход</h5>
        </div>
        <div class="social-button">
          <a href="javascript:void(0)">
            <img src="{{ asset('/images/index/social-buttons/vk.jpg') }}" alt="Войти через ВК" />
          </a>
        </div>
        <div class="social-button">
          <a href="javascript:void(0)">
            <img src="{{  asset('/images/index/social-buttons/facebook.jpg') }}" alt="Войти через facebook" />
          </a>
        </div>
        <div class="social-button">
          <a href="javascript:void(0)">
            <img src="{{ asset('/images/index/social-buttons/twitter.jpg') }}" alt="Войти через twitter" />
          </a>
        </div>
        <div class="social-button">
          <a href="javascript:void(0)">
            <img src="{{ asset('/images/index/social-buttons/odnoklassniki.jpg') }}" alt="Войти через одноклассники" />
          </a>
        </div>
      </div>
    </div>
    <div class="clear"></div>
    <div class="ratings">
      {{ newest_user_operation()|raw }}
      {{ newest_user_badge()|raw }}
      {{ top_user_by_points()|raw }}
    </div>
    <div class="clear"></div>
    <div class="subscribe-block col-right col-lg-8 col-md-8 col-sm-12 col-xs-12">
      <hr />
      <div class="subscribe-text col-center col-sm-5 col-xs-12">
        <h4>Видеоуроки на почту</h4>
        <h5>
          Получайте свежие видеоуроки
          прямо на свой e-mail
        </h5>
      </div>
      <form class="subscribe-form col-center col-sm-7 col-xs-12" method="POST">
        <div class="input-group">
          <input type="text" placeholder="anna.petrova@mail.com" class="form-control subscribe-email" name="subscribe_email" />
          <div class="input-group-btn">
            <button type="submit" class="btn btn-success subscribe-button"><span class="subscribe-button-label">Подписаться</span></button>
          </div>
        </div>
      </form>
      <div class="clear"></div>
    </div>
  </div>
{% endblock %}