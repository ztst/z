<div class="col-lg-4 col-xs-12">
  <h2>Последние баллы:</h2>
  {% if userOperations %}
    {% for userOperation in userOperations %}
      <div class="col-xs-12">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
          <h4>+{{ userOperation.getAccruedPoints }} знаков.</h4>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-8 col-lg-8">
          {{ userOperation.user }}
        </div>
      </div>
      <div class="clear"></div>
    {% endfor %}
  {% else %}
    <h5>Не найдено</h5>
  {% endif %}
</div>