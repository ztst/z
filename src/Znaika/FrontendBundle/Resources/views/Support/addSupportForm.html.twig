{% extends 'ZnaikaFrontendBundle::layout.html.twig' %}

{% block content %}
  <div class="static-form-container additional-form-container">
    <h3>Напишите нам!</h3>
    <h5>
      Наша цель - создать самый удобный веб-сервис для изучения уроков школьной программы.
      Нам очень важны ваши комментарии, пожелания и заметки об ошибках.
    </h5>
    <div class="additional-form support-form">
      {{ form_start(form, {'method': 'POST'}) }}
      {{ form_errors(form, {'attr': {'class': 'alert alert-danger'}}) }}
      <div class="input-group">
        {{ form_label(form.name, 'Ваше имя') }}
        {{ form_errors(form.name) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="input-group">
        {{ form_label(form.email, 'Email') }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="input-group">
        {{ form_label(form.text, 'Текст сообщения') }}
        {{ form_errors(form.text) }}
        {{ form_widget(form.text, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="additional-form-button-container">
        <button type="submit" class="active-button">
          <span class="active-button-label">Отправить</span>
        </button>
      </div>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}