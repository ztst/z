{% if users %}
  {% for user in users %}
    <li class="" id="userContainer{{ user.UserId }}">
      <a id="openUserProfile{{ user.userId }}" class="show-user-profile-link" href="{{ path("show_user_profile", {"userId": user.userId}) }}">
        <img class="media-object found-user-pic"
             width="50"
             height="50"
             src="{{ user_photo_small_url(user) }}"
             alt="Здесь будет аватар"/>
      </a>
      <div class="user-text-data">
        <div class="found-user-name">
          <a id="openUserProfile{{ user.userId }}" class="show-user-profile-link" href="{{ path("show_user_profile", {"userId": user.userId}) }}">
            {{ user }}
          </a>
        </div>
        <div class="found-user-additional-info">
          {{ search_user_role(user)|lower }}
        </div>
        {% if user.region %}<div class="found-user-additional-info">{{ user.region.regionName }}</div>{% endif %}
        <a href="javascript:void(0);" title="" class="active-link send-found-user-message-button">Отправить сообщение</a>
      </div>
      <div class="clear"></div>
    </li>
  {% endfor %}
{% else %}
  <li><h5>Не найдено</h5></li>
{% endif %}