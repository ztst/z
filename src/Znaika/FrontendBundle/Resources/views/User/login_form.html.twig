{% if error %}
  <div class="alert alert-danger">{{ error.message }}</div>
{% endif %}
<form action="{{ path('login_check') }}" method="post" id="loginForm" class="login-form">
  <div class="form-group input-group">
    <label for="username">Email:</label>
    <input class="form-control" type="text" id="username" name="_username" placeholder="anna.petrova@mail.com" value="{{ last_username }}"/>
  </div>

  <div class="form-group input-group">
    <label for="password">Пароль:</label>
    <input class="form-control" type="password" id="password" name="_password" placeholder="английские буквы, цифры и знаки"/>
  </div>

  <div class="form-group remember-me-block">
    <input type="checkbox" id="rememberMe" name="_remember_me"/>
    <label for="rememberMe">Запомнить меня</label>
  </div>

  <input type="hidden" name="_target_path" value="{{ referrer }}"/>
  <div class="login-button-container">
    <button class="btn btn-primary" type="submit">Вход</button>
  </div>
</form>