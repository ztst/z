{% if error %}
  <div class="alert alert-danger">{{ error.message }}</div>
{% endif %}
<form action="{{ path('login_check') }}" method="post" id="loginForm" class="login-form">
  <div class="form-group input-group">
    <label for="username">E-mail</label>
    <input class="form-control" type="email" id="username" name="_username" placeholder="anna.petrova@mail.com" value="{{ last_username }}"/>
  </div>

  <div class="form-group input-group show-password-button-container">
    <label for="password">Пароль</label>
    <input class="form-control" type="password" id="password" name="_password" placeholder="английские буквы, цифры и знаки"/>
    <span class="show-password-icon"></span>
  </div>

  <div class="form-group remember-me-block">
    <input type="checkbox" id="rememberMe" name="_remember_me"/>
    <label for="rememberMe">Запомнить меня</label>
    <a href="{{ path("password_recovery") }}" class="forget-password-link right-link" title="" id="switchForgetPasswordLink">Забыли пароль?</a>
  </div>

  <input type="hidden" name="_target_path" value="{{ referrer }}"/>
  <div class="login-button-container">
    <div class="outer-border">
      <button class="form-submit-button" type="submit">Вход</button>
    </div>
  </div>
</form>