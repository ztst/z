{% extends 'ZnaikaFrontendBundle::layout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}

  {% stylesheets filter="?yui_css"
    '@ZnaikaFrontendBundle/Resources/public/css/tab_menu.css'
    '@ZnaikaFrontendBundle/Resources/public/css/profile_page.css'
    '@ZnaikaFrontendBundle/Resources/public/css/teacher_profile.css'
  %}
  <link rel="stylesheet" type="text/css" media="all" href="{{ asset_url }}"/>
  {% endstylesheets %}
{% endblock %}

{% block javascripts %}
  {{ parent() }}

  {% javascripts filter='?yui_js'
    '../app/Resources/public/js/classes/page/profile/ViewTeacherQuestionsPage.class.js'
  %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}

{% block content %}
  <div class="teacher-profile-top-horizontal-line"></div>
  <div class="profile-sidebar-menu-container">
    {{ knp_menu_render('sidebar_profile_menu', {'allow_safe_labels': true}) }}
  </div>
  <div class="teacher-profile-container">
    <div>
      <div class="tabs-container">
        <ul class="nav nav-tabs select-content-tab user-profile-tab-menu">
          <li class="video-with-questions active">
            <div class="active-top-border"></div>
            <a id="videoTab" href="#video_tab" data-toggle="tab">
              <span class="tab-label">Уроки с вопросами</span>
            </a>
          </li>
          {% if countQuestions %}
            <li class="questions-tab hidden">
              <div class="active-top-border"></div>
              <a id="questionTab" href="#synopsis_tab" data-toggle="tab">
                <span class="tab-label">Просмотр вопросов</span>
              </a>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
    <div class="tab-pane active video-tab" id="video_tab">
      {% include "ZnaikaFrontendBundle:User:video_with_questions_list.html.twig" with {'videos': videos} %}
    </div>
    <div class="tab-pane synopsis-tab" id="synopsis_tab">
      {% include "ZnaikaFrontendBundle:User:teacher_questions_tab.html.twig" with {'videos': videos} %}
    </div>
  </div>
  <div class="teacher-profile-bottom-horizontal-placeholder">
    <div class="line"></div>
  </div>
{% endblock %}
