<label>Дети</label>
<div class="input-group">
  {% for relation in relations %}
    <div class="user-relations-block">
      <input type="text" class="form-group form-control relation-name" {{ relation.child }} value="{{ relation.child }}" disabled="disabled" />
      <a href="{{ path('delete_child', {'childId': relation.child.userId}) }}" title="" class="active-link delete-link delete-relation-link">Удалить</a>
    </div>
  {% endfor %}
</div>
{% if canAdd %}
  <a href="{{ path('search_child') }}" title="" class="active-link add-link add-relation-link">Добавить</a>
{% endif %}